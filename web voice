  <title>Web Counter - Dgn Suara</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      font-family: sans-serif;
      background-color: #f0f0f0;
    }
    .cotak {
      text-align: center;
      background: white;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 18px;
    }
    #count {
      font-size: 48px;
      margin: 20px 0;
    }
  </style>
</head>
<body>
  <div class="cotak">
    <div id="count">0</div>
    <button onclick="ubah(-1)">-</button>
    <button onclick="ubah(1)">+</button>
    <br>
    <button onclick="speakCount(count)">Bontol</svg>
    </button>
  </div>

<script>
  let count = 0;
  const countDisplay = document.getElementById("count");

  function ubah(amount) {
    count += amount;
    countDisplay.textContent = count;
  }

  function speakCount(n) {
    let audios = [];
    if (n >= 1 && n <= 10) {
      audios.push(`sont/vc_${n}.mp3`);
      playAudioSequence(audios);
    }
  }

  function playAudioSequence(files) {
    if (!files.length) return;
    const audio = new Audio(files[0]);
    audio.onended = () => playAudioSequence(files.slice(1));
    audio.play();
  }
</script>
</body>
</html>
