#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <DHT.h>
#include <DHT_U.h>

#define DHTPIN 19
#define DHTTYPE DHT11
#define LDRPIN 39        // Pin LDR
#define SLAVE_ADDR 8

DHT dht(DHTPIN, DHTTYPE);
char dataKirim[32]; // buffer kecil, aman untuk I2C (≤32 bytes)

void requestEvent() {
  // Kirim data JSON kecil ke master
  Wire.write((const uint8_t*)dataKirim, strlen(dataKirim));
}

void setup() {
  Serial.begin(9600);
  Wire.begin(SLAVE_ADDR); // mode slave
  Wire.onRequest(requestEvent); // callback saat master minta data
  dht.begin();
  Serial.println("Slave siap baca DHT & LDR, kirim ke master (JSON kecil)");
}

void loop() {
  float suhu = dht.readTemperature();
  float kelembapan = dht.readHumidity();
  int ldrValue = analogRead(LDRPIN); // baca nilai LDR (0-4095)

  if (!isnan(suhu) && !isnan(kelembapan)) {
    // JSON kecil, aman ≤32 byte
    snprintf(dataKirim, sizeof(dataKirim),
             "{\"t\":%.1f,\"h\":%.1f,\"l\":%d}",
             suhu, kelembapan, ldrValue);
  } else {
    snprintf(dataKirim, sizeof(dataKirim),
             "{\"e\":\"Sensor Error\"}");
  }

  Serial.println(dataKirim);  // debug
  delay(2000);
}
